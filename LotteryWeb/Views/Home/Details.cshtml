@model LotteryBetDetailViewModel


@if (Model.IsDrawed)
{
    <h1 class="text-center">ŞANSLI SAYILAR</h1>


    <div class="row mt-3 display-4">
        <div class="col-md-2 bg-dark text-center text-light">@Model.Lottery.Number1</div>
        <div class="col-md-2 text-center border border-dark">@Model.Lottery.Number2</div>
        <div class="col-md-2 bg-dark text-center text-light">@Model.Lottery.Number3</div>
        <div class="col-md-2 text-center border border-dark">@Model.Lottery.Number4</div>
        <div class="col-md-2 bg-dark text-center text-light">@Model.Lottery.Number5</div>
        <div class="col-md-2 text-center border border-dark">@Model.Lottery.Number6</div>
    </div>

    <hr />
    <h1 class="text-center">SENİN TAHMİNLERİN</h1>


    <div class="row mt-3 display-4">
        <div class="col-md-2 bg-dark text-center text-light">@Model.Bet.Number1</div>
        <div class="col-md-2 text-center border border-dark">@Model.Bet.Number2</div>
        <div class="col-md-2 bg-dark text-center text-light">@Model.Bet.Number3</div>
        <div class="col-md-2 text-center border border-dark">@Model.Bet.Number4</div>
        <div class="col-md-2 bg-dark text-center text-light">@Model.Bet.Number5</div>
        <div class="col-md-2 text-center border border-dark">@Model.Bet.Number6</div>
    </div>

    <hr />

    <h3>Doğru tahmin sayısı: @Model.Bet.GetMatchCount()</h3>

}
else
{
    <h1> HENÜZ ÇEKİLİŞ YAPILMADI.ÇEKİLİŞ YAPMAK İÇİN <a asp-controller="Lottery" asp-action="AllLotteries">TIKLAYIN</a></h1>
}
