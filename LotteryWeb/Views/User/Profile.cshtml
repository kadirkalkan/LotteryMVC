@model UserProfileViewModel


<div class="row">
    <div class="col-md-5">
        <div class="form-group">
            <input type="text" asp-for="User.Username" class="form-control" disabled />
        </div>
        <div class="form-group">
            <input type="text" asp-for="User.Password" class="form-control" disabled />
        </div>
        <div class="form-group">
            <input id="balance" type="text" asp-for="User.Balance" class="form-control" disabled />
        </div>
        <input type="hidden" asp-for="User.Id" />
        <button id="btnAdd" type="button" class="btn btn-sm btn-outline-secondary">Add 5$</button>
    </div>
</div>



@section Scripts{

    <script>
        $("#btnAdd").click(function (e) {
            var userId = @(Model.User.Id)
            $.ajax({
                type: 'GET',
                url: '@Url.Action("AddBalance","User")',
                data: { id: userId },
                success: (data) => {
                    $("#balance").val(data);
                }
            })
            e.preventDefault();
        })
    </script>
}