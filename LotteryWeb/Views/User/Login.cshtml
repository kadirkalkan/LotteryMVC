@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}
@section Style {
<style>
    .btn-color {
        background-color: #0e1c36;
        color: #fff;
    }

    .profile-image-pic {
        height: 200px;
        width: 200px;
        object-fit: cover;
    }



    .cardbody-color {
        background-color: #ebf2fa;
    }

    a {
        text-decoration: none;
    }
</style>
}

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h2 class="text-center text-dark mt-5">Login Form</h2>
            <div class="text-center mb-5 text-dark">Stealed by Kadir</div>
            <div class="card my-5">

                <form class="card-body cardbody-color p-lg-5" method="post">
                    <div class="text-center">
                        <img src="https://cdn.pixabay.com/photo/2016/03/31/19/56/avatar-1295397__340.png" class="img-fluid profile-image-pic img-thumbnail rounded-circle my-3"
                             width="200" alt="profile">
                    </div>

                    <div class="mb-3">
                        <input asp-for="Username" class="form-control" aria-describedby="emailHelp" placeholder="User Name">
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <input asp-for="Password" type="password" class="form-control" placeholder="password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-color px-5 mb-2 w-100">Login</button>
                    </div>
                    <div asp-validation-summary="ModelOnly" class="text-danger text-center"></div>
                    <div id="emailHelp" class="form-text text-center mb-5 text-dark">
                        Not
                        Registered?
                        <a class="text-dark fw-bold" asp-controller="User" asp-action="Register">
                            Create an
                            Account
                        </a>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>